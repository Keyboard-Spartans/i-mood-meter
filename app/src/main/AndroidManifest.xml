<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.imoodmeter">
    <uses-permission android:name="ANDROID.PERMISSION.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="ANDROID.PERMISSION.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IMoodMeter">
        <activity android:name=".RecordMoodRecorded"/>
        <activity android:name=".RecordMoodAddComment" /> <!-- ACTIVITY FOR RECORDING -->
        <activity android:name=".RecordMoodMainActivity"/>

        <!-- ACTIVITY FOR MEMORY -->
        <activity android:name=".AddMemoryActivity" />
        <activity android:name=".ViewSingleMemoryActivity" />
        <activity android:name=".ViewMemoriesActivity" /> <!-- ACTIVITY FOR TRACKING -->
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>